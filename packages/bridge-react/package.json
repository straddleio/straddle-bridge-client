{
    "name": "@straddleio/bridge-react",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/straddleio/straddle-bridge-client.git",
        "directory": "packages/bridge-react"
    },
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rollup -c",
        "dev": "npm-watch",
        "publish": "bun run build && bunx --bun npm publish"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@types/node": "^22.5.4",
        "npm-watch": "^0.13.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "typescript": "^5"
    },
    "type": "module",
    "peerDependencies": {
        "@types/react": "^18.3.5",
        "react": "^18",
        "react-dom": "^18.3.1"
    },
    "files": [
        "dist/**/*"
    ],
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx"
        }
    },
    "dependencies": {
        "@straddleio/bridge-core": "^0.1.3"
    }
}
